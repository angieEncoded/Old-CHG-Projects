<% layout('layouts/boilerplate') %>



<div class="container mb-5">
    <div class="row mt-5">
        <div class="col"><h3>Current Jobs below</h3></div>
        <div class="col text-center">  <%- include("../partials/pagination.ejs")%></div>
        <div class="col"><a href="/xivjobs/new" class="btn btn-secondary float-end">Add new Job</a></div>

    </div>
    <div class="row mt-5 chg-div-table">
        <div class="col fw-bold">Job Icon</div>
        <div class="col fw-bold">Job Name</div>
        <div class="col fw-bold">job Abbr.</div>
        <div class="col fw-bold">Emoji</div>
        <div class="col fw-bold">Type</div>
        <div class="col fw-bold">Role</div>
    </div>


    <% for (let job of jobs) { %>
        <a class="chg-div-row-anchor" href="/xivjobs/<%=job.id %>/edit">
            <div class="row chg-div-row">
                <div class="col">
                    <img src="/images/jobs/<%= job.icon %>" class="img-fluid"/></div>
                <div class="col"><%= job.name %></div>
                <div class="col"><%= job.abbrv %></div>
                <div class="col"><%= job.emoji %></div>
                <div class="col"><%= job.type %></div>
                <div class="col"><%= job.role %></div>
            </div>
        </a>
    <% } %> 





</div>

  


